<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".View.ProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="35dp"
        android:foregroundGravity="center_horizontal"
        app:cardCornerRadius="100dp"
        android:id="@+id/card_avatar"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_person_24"
            android:id="@+id/avatar"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/id_git"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_avatar"
        android:layout_marginTop="16dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="id"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/login_git"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_git"
        android:layout_marginTop="20dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="login"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <EditText
        android:id="@+id/bio_git"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_git"
        android:layout_marginTop="20dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="bio"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <TextView
        android:id="@+id/date_git"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bio_git"
        android:layout_marginTop="20dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="date_git"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


</RelativeLayout>